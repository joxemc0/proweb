<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear orden</title>
    <link rel="stylesheet" href="/public/style.css">
    <style>
        h1 {

            color: aqua;
            }
        h2 {
            color: blue;
        }
        label {
            color: blueviolet;
        }
        button {
            color: darkmagenta;
        }
        nav{
            border-radius: 10%;
        }
        blockquote {
            color: rgb(25, 199, 218);
        }
        body {
            background-image: url(/img/sdaada.jpg);
            background-size: cover; 
            background-position: center;
        }
            
    </style>




</head>


<body>
    <h1>Crear Orden </h1>
    <form id="orderForm" action="/orders/new" method="post">
        <nav>
            <label for="tableNumber">Numero de mesa:</label>
            <input type="number" id="tableNumber" name="tableNumber" required>
            <br><br>
        </nav>
        <aside>
            <blockquote>Haga su pedido</blockquote>
            <blockquote>Si desea agregar otro producto haz click en "Agregar otra orden"</blockquote>
        </aside>
            

        <div id="items">
            <h2>Items</h2>
            <div class="item">
                <label for="itemName">Nombre de Producto :</label>
                <input type="text" class="itemName" name="items[0][name]" required><br><br>
                <label for="itemPrice">Precio:</label>
                <input type="number" class="itemPrice" name="items[0][price]" step="0.01" required><br><br>
                <label for="itemQuantity">Cantidad:</label>
                <input type="number" class="itemQuantity" name="items[0][quantity]" required><br><br>
            </div>
        </div>
        <br>
        <button type="button" onclick="addItem()">Agregar otra orden</button>
        <br><br>
        <button type="submit">Hacer Orden</button>
    </form>

    <script>
        let itemCount = 1;

        function addItem() {
            const itemsDiv = document.getElementById('items');
            const newItemDiv = document.createElement('div');
            newItemDiv.classList.add('item');
            //para agregar nueva orden con los campos correspondiente
            newItemDiv.innerHTML = `
                <label for="title">Producto Agregado</label><br><br>
                <label for="itemName">Nombre de Producto:</label>
                <input type="text" class="itemName" name="items[${itemCount}][name]" required><br><br>
                <label for="itemPrice">Precio:</label>
                <input type="number" class="itemPrice" name="items[${itemCount}][price]" step="0.01" required><br><br>
                <label for="itemQuantity">Cantidad:</label>
                <input type="number" class="itemQuantity" name="items[${itemCount}][quantity]" required><br><br>
            `;
            itemsDiv.appendChild(newItemDiv);
            itemCount++;
        }
    </script>
</body>
</html>